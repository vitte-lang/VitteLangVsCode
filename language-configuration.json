{
  "$schema": "vscode://schemas/language-configuration",
  "comments": {
    "lineComment": "#"
  },
  "brackets": [["[","]"],["(",")"]],
  "autoClosingPairs": [
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "\"", "close": "\"", "notIn": ["string"] }
  ],
  "surroundingPairs": [["[","]"],["(",")"],["\"","\""]],
  "indentationRules": {
    "increaseIndentPattern": "^\\s*(?:if|elif|else|while|for|match|struct|union|enum|typedef|scenario|program|service|kernel|driver|tool|pipeline|when|loop|fn|type|scn|prog)\\b.*$",
    "decreaseIndentPattern": "^\\s*\\.end\\b"
  },
  "onEnterRules": [
    {
      "beforeText": "^\\s*(?:if|elif|else|while|for|match|struct|union|enum|typedef|scenario|program|service|kernel|driver|tool|pipeline|when|loop|fn|type|scn|prog)\\b.*$",
      "action": { "indent": "indent" }
    },
    {
      "beforeText": "^\\s*\\.end\\s*$",
      "action": { "indent": "outdent" }
    }
  ]
}
